{
  "env": {
    "dev": {
      "dest": "public"
    },
    "producction": {
      "dest": "docs"
    }
  },
  "api": {
    "src": "src/api/*",
    "dest": "public/api/",
    "dist": "docs/api/"
  },
  "css": {
    "src": "src/assets/scss/**/*.scss",
    "dest": "public/assets/css/",
    "dist": "docs/assets/css/"
  },
  "html": {
    "src": "src/templates/*.html",
    "partials": "src/templates/partials/",
    "dest": "public/",
    "dist": "docs/"
  },
  "js": {
    "src": [
      "src/assets/js/**/*.js"
    ],
    "dest": "public/assets/js/",
    "dist": "docs/assets/js/"
  },
  "images": {
    "src": "src/assets/images/**/*.{gif,jpg,jpeg,JPG,JPEG,png,svg}",
    "dest": "public/assets/images/",
    "dist": "docs/assets/images/"
  },
  "watch": {
    "html": "src/**/*.html"
  }
}